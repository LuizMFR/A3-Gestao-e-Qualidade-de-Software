<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="720" prefWidth="1200"
           styleClass="app-bg"
           stylesheets="@../css/perfil.css"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.cliente.controllers.CategoriaController">

    <children>
        <BorderPane fx:id="root"
                    maxHeight="660" maxWidth="1120"
                    prefHeight="660" prefWidth="1120"
                    styleClass="app-card">

            <top>
                  <HBox spacing="12" styleClass="appbar" BorderPane.alignment="CENTER_LEFT">
                        <padding>
                              <Insets top="10" right="14" bottom="10" left="14" />
                        </padding>
                        <children>
                              <ImageView fitHeight="74" fitWidth="71" preserveRatio="true">
                                 <image>
                                    <Image url="@logo.png" />
                                 </image>
                              </ImageView>

                              <Label text="Categorias"
                                    styleClass="section-title" />

                              <Pane HBox.hgrow="ALWAYS" />

                              <!-- BOTÃO SAIR -->
                              <Button onAction="#sair"
                                    styleClass="btn-danger"
                                    text="Sair" />
                        </children>
                  </HBox>
            </top>


            <!-- CONTEÚDO CENTRAL (SEM MENU LATERAL) -->
            <center>
                <VBox spacing="16">
                    <padding>
                        <Insets top="24" right="24" bottom="24" left="24" />
                    </padding>

                    <children>
                        <Label styleClass="section-title" text="Gerenciar Categorias" />

                        <!-- CARD DO FORMULÁRIO -->
                        <VBox spacing="12" styleClass="card">
                            <padding>
                                <Insets top="16" right="16" bottom="16" left="16" />
                            </padding>

                            <children>
                                <Label text="Adicionar Categoria" styleClass="card-title" />

                                <VBox spacing="4">
                                    <Label styleClass="muted" text="Descrição" />
                                    <TextField fx:id="textfieldDesc"
                                               promptText="Ex: Alimentação, Transporte, Lazer"
                                               styleClass="input-field" />
                                </VBox>

                                <VBox spacing="4">
                                    <Label styleClass="muted" text="Tipo (custo/receita)" />
                                    <TextField fx:id="textfieldType"
                                               promptText="Custo ou Receita"
                                               styleClass="input-field" />
                                </VBox>

                                <HBox alignment="CENTER_RIGHT">
                                    <Button fx:id="btnSubmit"
                                            text="Cadastrar"
                                            onAction="#cadastrarCategoria"
                                            styleClass="btn-primary" />
                                </HBox>
                            </children>
                        </VBox>

                        <!-- CARD DA TABELA -->
                        <VBox spacing="8" styleClass="card">
                            <padding>
                                <Insets top="16" right="16" bottom="16" left="16" />
                            </padding>

                            <children>
                                <Label styleClass="card-title" text="Categorias Cadastradas" />

                                <TableView fx:id="tableCategorias"
                                           prefHeight="280"
                                           VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="tablecolId"
                                                     prefWidth="80"
                                                     text="ID" />
                                        <TableColumn fx:id="tablecolTitulo"
                                                     prefWidth="220"
                                                     text="Título" />
                                        <TableColumn fx:id="tablecolDescricao"
                                                     prefWidth="360"
                                                     text="Descrição" />
                                        <TableColumn fx:id="tablecolAcoes"
                                                     prefWidth="160"
                                                     text="Ações" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </center>

        </BorderPane>
    </children>
</StackPane>

